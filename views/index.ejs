<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enhanced Card</title>
    <!-- <link rel="stylesheet" href="styles.css" /> -->
    <style>
/* navbar css */


/* cards css */
      .card-container {
        background: linear-gradient(135deg, #d7a6ba91, #4a90e2);
        font-family: "Poppins", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
      }

      @keyframes borderAnimation {
        0% {
          border-color: #d2408c;
        }
        25% {
          border-color: #1cb82c;
        }
        50% {
          border-color: #3498db;
        }
        75% {
          border-color: #f39c12;
        }
        100% {
          border-color: #d2408c;
        }
      }

      .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        align-items: center;
      }

      .card {
        background-color: #fff;
        border: 4px solid #d2408c;
        border-radius: 20px;
        padding: 20px;
        width: 280px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        position: relative;
        transition: transform 0.3s, box-shadow 0.3s;
        animation: borderAnimation 5s infinite linear;
      }

      .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
      }

      .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
      }

      .logo {
        width: 120px;
        height: auto;
      }

      .compare {
        font-size: 14px;
        color: #666;
      }

      .card-title {
        font-size: 22px;
        font-weight: 700;
        color: #333;
        margin: 10px 0;
        text-transform: uppercase;
      }

      .description {
        font-size: 16px;
        color: #555;
        margin: 10px 0;
      }

      .tests-count {
        font-size: 16px;
        color: #333;
        font-weight: 600;
        margin: 10px 0;
      }

      .price-section {
        display: flex;
        align-items: center;
        margin: 20px 0;
      }

      .price {
        font-size: 22px;
        color: #1cb82c;
        font-weight: 700;
      }

      .discount {
        font-size: 14px;
        color: #d2408c;
      }

      .strike {
        text-decoration: line-through;
        color: #aaa;
      }

      .fasting {
        font-size: 16px;
        color: #1cb82c;
        font-weight: 600;
        margin: 15px 0;
      }

      .add-to-cart {
        background-color: #1cb82c;
        color: white;
        border: none;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        margin-bottom: 20px;
        width: 100%;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0 6px 15px rgba(28, 184, 44, 0.4);
        position: relative;
        overflow: hidden;
      }

      .add-to-cart:hover {
        background-color: #149a21;
        transform: translateY(-3px);
      }

      .image-wrapper {
        position: absolute;
        top: 50%;
        left: 65px;
        width: 24px;
        height: 24px;
        transform: translateY(-50%);
        color: white;
      }

      .image-wrapper img {
        position: absolute;
        width: 100%;
        height: 100%;
        transition: transform 0.5s ease;
        filter: brightness(0) invert(1);
      }

      .image1 {
        transform: translateY(0);
      }

      .image2 {
        transform: translateY(calc(100% + 10px)); /* 10px gap added */
      }

      .add-to-cart:hover .image1 {
        transform: translateY(calc(-100% - 10px)); /* 10px gap added */
      }

      .add-to-cart:hover .image2 {
        transform: translateY(0);
      }

      .certifications {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .certifications img {
        width: 50px;
        height: auto;
        transition: transform 0.3s ease;
      }

      .certifications img:hover {
        transform: scale(1.1);
      }
    </style>
  </head>
  <body>



    <!-- cards -->
    <div class="card-container">
      <div class="cards">
        <% cards.forEach(function(crd) { %>
        <div class="card">
          <div class="card-header">
            <img src="<%= crd.PROVIDER_LOGO %>" alt="Thyrocare" class="logo" />
            <div class="compare">
              <input type="checkbox" id="compare" />
              <label for="compare">Compare</label>
            </div>
          </div>
          <div class="card-title"><%= crd.OURPACKAGE %></div>
          <p class="description"><%= crd.TEST_NAME %></p>
          <p class="tests-count"><%= crd.TEST_COUNT %> Tests</p>
          <div class="price-section">
            <p class="price">₹<%= crd.OFFER_PRICE %>/-</p>
            &nbsp;
            <p class="discount"><%= Math.round(((crd.ACT_PRICE - crd.OFFER_PRICE) / crd.ACT_PRICE) * 100) %>% Off <span class="strike">₹<%= crd.ACT_PRICE %></span></p>
          </div>
          <p class="fasting"><%= crd.FASTING_FLAG == 'CF' ? 'Fasting Not Required' : 'Fasting Required'%></p>

          <!-- Updated Button -->
          <button class="add-to-cart">
            <div class="image-wrapper">
              <img src="/shopping-cart.png" alt="Cart" class="image1" />
              <img src="/shopping-cart.png" alt="Checked" class="image2" />
            </div>
            ADD
          </button>

          <div class="certifications">
            <img src="/Iso.png" alt="ISO" />
            <img src="/cap.png" alt="CAP Accredited" />
            <img src="/Nabl.png" alt="NABL" />
            <img src="/ngsp.jpg" alt="NGSP" />
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
